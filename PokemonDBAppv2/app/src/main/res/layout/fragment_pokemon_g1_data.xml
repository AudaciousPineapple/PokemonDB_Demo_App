<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pokedex.fragments.PokemonG1DataFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Dex Num & Name -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/g1_pokemon_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/placeholder_num"
                android:textSize="30sp"/>

            <TextView
                android:id="@+id/g1_pokemon_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="@string/placeholder_name"
                android:textSize="30sp"/>

        </LinearLayout>

        <!-- Sprites -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/g1_pokemon_sprite1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/g1_001_1"
                android:scaleType="fitCenter"/>

            <ImageView
                android:id="@+id/g1_pokemon_sprite2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/g1_001_1"/>

        </LinearLayout>

        <!-- Names, Types, Classification, Height & Weight -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Names -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".50"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/names"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_marginVertical="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/japan_"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/g1_pokemon_name_jp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/placeholder_text" />

                        <TextView
                            android:id="@+id/g1_pokemon_name_jp_eng"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/placeholder_text" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginVertical="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/french_"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/g1_pokemon_name_fr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/placeholder_text" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginVertical="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/german_"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/g1_pokemon_name_ger"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/placeholder_text" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginVertical="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/korean_"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/g1_pokemon_name_kor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/placeholder_text" />

                </LinearLayout>


            </LinearLayout>

            <!-- Types, Classification, Height & Weight -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.50"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/type"
                    android:textStyle="bold" />

                <!-- Types -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/g1_pokemon_type1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/type_grass" />

                    <ImageView
                        android:id="@+id/g1_pokemon_type2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:src="@drawable/type_poison" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/classification"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/g1_pokemon_class"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/placeholder_text" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/height"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/g1_pokemon_height"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/placeholder_num" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/weight"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/g1_pokemon_weight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/placeholder_num" />

            </LinearLayout>

        </LinearLayout>

        <!-- Capture Rate, XP Growth & EVs Earned -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <!-- Capture Rate & XP Growth -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.50"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/capture_rate"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/g1_pokemon_cap_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/placeholder_int"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/xp_growth"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/g1_pokemon_xp_growth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/placeholder_xp_growth"/>

            </LinearLayout>

            <!-- EVs Earned -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.50"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/effort_values_earned"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/g1_pokemon_ev_hp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/placeholder_num"/>

                <TextView
                    android:id="@+id/g1_pokemon_ev_attack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/placeholder_num"/>

                <TextView
                    android:id="@+id/g1_pokemon_ev_defence"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/placeholder_num"/>

                <TextView
                    android:id="@+id/g1_pokemon_ev_special"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/placeholder_num"/>

                <TextView
                    android:id="@+id/g1_pokemon_ev_speed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/placeholder_num"/>


            </LinearLayout>

        </LinearLayout>

        <!-- Evolutionary Chain graphic -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/evolutionary_chain"
            android:textStyle="bold"/>

        <LinearLayout
            android:id="@+id/g1_pokemon_evo_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"/>

        <!-- Locations -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/locations"
            android:textStyle="bold"/>

        <!-- Red Locations -->
        <LinearLayout
            android:id="@+id/g1_pokemon_red_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.30"
                android:text="@string/red"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:id="@+id/g1_pokemon_red_locations"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.70"
                android:text="@string/placeholder_text"
                android:layout_gravity="center_vertical"/>

        </LinearLayout>

        <!-- Blue Locations -->
        <LinearLayout
            android:id="@+id/g1_pokemon_blue_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.30"
                android:text="@string/blue"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:id="@+id/g1_pokemon_blue_locations"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.70"
                android:text="@string/placeholder_text"
                android:layout_gravity="center_vertical"/>

        </LinearLayout>

        <!-- Yellow Locations -->
        <LinearLayout
            android:id="@+id/g1_pokemon_yellow_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.30"
                android:text="@string/yellow"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:id="@+id/g1_pokemon_yellow_locations"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.70"
                android:text="@string/placeholder_text"
                android:layout_gravity="center_vertical"/>

        </LinearLayout>

        <!-- Movesets -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/movesets"
            android:textStyle="bold"
            android:textSize="20sp"/>

        <!-- Gen I / Red, Green & Blue Level Up -->
        <TextView
            android:id="@+id/g1_pokemon_level_lbl"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textStyle="bold"
            android:text="@string/generation_i_level_up"
            android:clickable="true"
            android:focusable="true"/>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/g1_pokemon_level_table"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="45dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="@string/level"
                        android:textStyle="bold"
                        android:layout_marginHorizontal="2dp"/>

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="@string/attack_name"
                        android:gravity="center_horizontal"
                        android:textStyle="bold"
                        android:layout_marginHorizontal="2dp"/>

                    <TextView
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:text="@string/type"
                        android:textStyle="bold"
                        android:layout_marginHorizontal="2dp"
                        android:gravity="center_horizontal"/>

                    <TextView
                        android:layout_width="40dp"
                        android:gravity="center_horizontal"
                        android:layout_height="wrap_content"
                        android:text="@string/atk"
                        android:textStyle="bold"
                        android:layout_marginHorizontal="2dp"/>

                    <TextView
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="@string/acc"
                        android:textStyle="bold"
                        android:layout_marginHorizontal="2dp"/>

                    <TextView
                        android:layout_width="40dp"
                        android:gravity="center_horizontal"
                        android:layout_height="wrap_content"
                        android:text="@string/pp"
                        android:textStyle="bold"
                        android:layout_marginHorizontal="2dp"/>

                    <TextView
                        android:layout_width="60dp"
                        android:gravity="center_horizontal"
                        android:layout_height="wrap_content"
                        android:text="@string/effect_p"
                        android:textStyle="bold"
                        android:layout_marginHorizontal="2dp"/>

                </LinearLayout>
            </LinearLayout>
        </HorizontalScrollView>

        <!-- Yellow Level Up -->
        <TextView
            android:id="@+id/g1_pokemon_yellow_lvl_lbl"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textStyle="bold"
            android:text="@string/yellow"
            android:clickable="true"
            android:focusable="true"/>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/g1_pokemon_yellow_level_table"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="45dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="@string/level"
                        android:textStyle="bold"
                        android:layout_marginHorizontal="2dp"/>

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="@string/attack_name"
                        android:textStyle="bold"
                        android:layout_marginHorizontal="2dp"/>

                    <TextView
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:text="@string/type"
                        android:textStyle="bold"
                        android:layout_marginHorizontal="2dp"
                        android:gravity="center_horizontal"/>

                    <TextView
                        android:layout_width="40dp"
                        android:gravity="center_horizontal"
                        android:layout_height="wrap_content"
                        android:text="@string/atk"
                        android:textStyle="bold"
                        android:layout_marginHorizontal="2dp"/>

                    <TextView
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="@string/acc"
                        android:textStyle="bold"
                        android:layout_marginHorizontal="2dp"/>

                    <TextView
                        android:layout_width="40dp"
                        android:gravity="center_horizontal"
                        android:layout_height="wrap_content"
                        android:text="@string/pp"
                        android:textStyle="bold"
                        android:layout_marginHorizontal="2dp"/>

                    <TextView
                        android:layout_width="60dp"
                        android:gravity="center_horizontal"
                        android:layout_height="wrap_content"
                        android:text="@string/effect_p"
                        android:textStyle="bold"
                        android:layout_marginHorizontal="2dp"/>

                </LinearLayout>
            </LinearLayout>
        </HorizontalScrollView>

        <!-- TM/HM Moves -->
        <TextView
            android:id="@+id/g1_pokemon_tm_lbl"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textStyle="bold"
            android:text="@string/tm_hm_moves"
            android:clickable="true"
            android:focusable="true"/>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/g1_pokemon_tm_table"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="@string/tm_num"
                        android:textStyle="bold"
                        android:layout_marginHorizontal="2dp"/>

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="@string/attack_name"
                        android:textStyle="bold"
                        android:layout_marginHorizontal="2dp"/>

                    <TextView
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:text="@string/type"
                        android:textStyle="bold"
                        android:layout_marginHorizontal="2dp"
                        android:gravity="center_horizontal"/>

                    <TextView
                        android:layout_width="40dp"
                        android:gravity="center_horizontal"
                        android:layout_height="wrap_content"
                        android:text="@string/atk"
                        android:textStyle="bold"
                        android:layout_marginHorizontal="2dp"/>

                    <TextView
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="@string/acc"
                        android:textStyle="bold"
                        android:layout_marginHorizontal="2dp"/>

                    <TextView
                        android:layout_width="40dp"
                        android:gravity="center_horizontal"
                        android:layout_height="wrap_content"
                        android:text="@string/pp"
                        android:textStyle="bold"
                        android:layout_marginHorizontal="2dp"/>

                    <TextView
                        android:layout_width="60dp"
                        android:gravity="center_horizontal"
                        android:layout_height="wrap_content"
                        android:text="@string/effect_p"
                        android:textStyle="bold"
                        android:layout_marginHorizontal="2dp"/>

                </LinearLayout>
            </LinearLayout>
        </HorizontalScrollView>

        <!-- Pre-Evolution Only Moves-->
        <TextView
            android:id="@+id/g1_pokemon_prevo_lbl"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textStyle="bold"
            android:text="@string/pre_evolution_only_moves"
            android:clickable="true"
            android:focusable="true"/>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/g1_pokemon_prevo_table"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="@string/attack_name"
                        android:textStyle="bold"
                        android:layout_marginHorizontal="2dp"/>

                    <TextView
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:text="@string/type"
                        android:textStyle="bold"
                        android:layout_marginHorizontal="2dp"
                        android:gravity="center_horizontal"/>

                    <TextView
                        android:layout_width="40dp"
                        android:gravity="center_horizontal"
                        android:layout_height="wrap_content"
                        android:text="@string/atk"
                        android:textStyle="bold"
                        android:layout_marginHorizontal="2dp"/>

                    <TextView
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="@string/acc"
                        android:textStyle="bold"
                        android:layout_marginHorizontal="2dp"/>

                    <TextView
                        android:layout_width="40dp"
                        android:gravity="center_horizontal"
                        android:layout_height="wrap_content"
                        android:text="@string/pp"
                        android:textStyle="bold"
                        android:layout_marginHorizontal="2dp"/>

                    <TextView
                        android:layout_width="60dp"
                        android:gravity="center_horizontal"
                        android:layout_height="wrap_content"
                        android:text="@string/effect_p"
                        android:textStyle="bold"
                        android:layout_marginHorizontal="2dp"/>

                    <TextView
                        android:layout_width="100dp"
                        android:gravity="center_horizontal"
                        android:layout_height="wrap_content"
                        android:text="@string/method"
                        android:textStyle="bold"
                        android:layout_marginHorizontal="2dp"/>

                </LinearLayout>
            </LinearLayout>
        </HorizontalScrollView>

        <!-- Special Moves-->
        <TextView
            android:id="@+id/g1_pokemon_special_lbl"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textStyle="bold"
            android:text="@string/special_moves"
            android:clickable="true"
            android:focusable="true"/>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/g1_pokemon_special_table"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="@string/attack_name"
                        android:textStyle="bold"
                        android:layout_marginHorizontal="2dp"/>

                    <TextView
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:text="@string/type"
                        android:textStyle="bold"
                        android:layout_marginHorizontal="2dp"
                        android:gravity="center_horizontal"/>

                    <TextView
                        android:layout_width="40dp"
                        android:gravity="center_horizontal"
                        android:layout_height="wrap_content"
                        android:text="@string/atk"
                        android:textStyle="bold"
                        android:layout_marginHorizontal="2dp"/>

                    <TextView
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="@string/acc"
                        android:textStyle="bold"
                        android:layout_marginHorizontal="2dp"/>

                    <TextView
                        android:layout_width="40dp"
                        android:gravity="center_horizontal"
                        android:layout_height="wrap_content"
                        android:text="@string/pp"
                        android:textStyle="bold"
                        android:layout_marginHorizontal="2dp"/>

                    <TextView
                        android:layout_width="60dp"
                        android:gravity="center_horizontal"
                        android:layout_height="wrap_content"
                        android:text="@string/effect_p"
                        android:textStyle="bold"
                        android:layout_marginHorizontal="2dp"/>

                    <TextView
                        android:layout_width="100dp"
                        android:gravity="center_horizontal"
                        android:layout_height="wrap_content"
                        android:text="@string/source"
                        android:textStyle="bold"
                        android:layout_marginHorizontal="2dp"/>

                </LinearLayout>
            </LinearLayout>
        </HorizontalScrollView>

        <!-- Stats Table -->
        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textStyle="bold"
            android:text="@string/stats"
            android:clickable="true"
            android:focusable="true"/>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Header Row -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:text="@string/hp"
                        android:gravity="center_horizontal"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:text="@string/attack"
                        android:gravity="center_horizontal"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:text="@string/defense"
                        android:gravity="center_horizontal"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:text="@string/special"
                        android:gravity="center_horizontal"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:text="@string/speed"
                        android:gravity="center_horizontal"
                        android:textStyle="bold"/>

                </LinearLayout>

                <!-- Base stats row -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/g1_pokemon_stats_total"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:text="@string/base_stats_total_"/>

                    <TextView
                        android:id="@+id/g1_pokemon_base_hp"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"/>

                    <TextView
                        android:id="@+id/g1_pokemon_base_atk"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"/>

                    <TextView
                        android:id="@+id/g1_pokemon_base_def"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"/>

                    <TextView
                        android:id="@+id/g1_pokemon_base_spc"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"/>

                    <TextView
                        android:id="@+id/g1_pokemon_base_spe"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"/>

                </LinearLayout>

                <!-- Max stats row -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/max_stats"/>

                    </LinearLayout>

                    <!-- Max Stats -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- Max Stats Lv. 50-->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:gravity="start"
                                android:text="@string/lv_50"/>

                            <TextView
                                android:id="@+id/g1_pokemon_50_hp"
                                android:layout_width="90dp"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"/>

                            <TextView
                                android:id="@+id/g1_pokemon_50_atk"
                                android:layout_width="90dp"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"/>

                            <TextView
                                android:id="@+id/g1_pokemon_50_def"
                                android:layout_width="90dp"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"/>

                            <TextView
                                android:id="@+id/g1_pokemon_50_spc"
                                android:layout_width="90dp"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"/>

                            <TextView
                                android:id="@+id/g1_pokemon_50_spe"
                                android:layout_width="90dp"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"/>

                        </LinearLayout>

                        <!-- Max Stats Lv. 100 -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:gravity="start"
                                android:text="@string/lv_100"/>

                            <TextView
                                android:id="@+id/g1_pokemon_100_hp"
                                android:layout_width="90dp"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"/>

                            <TextView
                                android:id="@+id/g1_pokemon_100_atk"
                                android:layout_width="90dp"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"/>

                            <TextView
                                android:id="@+id/g1_pokemon_100_def"
                                android:layout_width="90dp"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"/>

                            <TextView
                                android:id="@+id/g1_pokemon_100_spc"
                                android:layout_width="90dp"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"/>

                            <TextView
                                android:id="@+id/g1_pokemon_100_spe"
                                android:layout_width="90dp"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"/>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </HorizontalScrollView>

        <!-- Next & Previous Pokemon -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Previous Pokemon -->
            <LinearLayout
                android:id="@+id/g1_pokemon_previous_layout"
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.50">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/left_arrow"
                    android:layout_gravity="center_vertical"/>

                <ImageView
                    android:id="@+id/g1_pokemon_previous_img"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="@string/left_arrow"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/g1_001_1"/>

                <TextView
                    android:id="@+id/g1_pokemon_previous_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_horizontal"
                    android:text="@string/placeholder_text"/>

            </LinearLayout>

            <!-- Next Pokemon -->
            <LinearLayout
                android:id="@+id/g1_pokemon_next_layout"
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.50"
                android:gravity="end">

                <TextView
                    android:id="@+id/g1_pokemon_next_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_horizontal"
                    android:text="@string/placeholder_text"/>

                <ImageView
                    android:id="@+id/g1_pokemon_next_img"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="@string/left_arrow"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/g1_001_1"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/right_arrow"
                    android:layout_gravity="center_vertical"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>